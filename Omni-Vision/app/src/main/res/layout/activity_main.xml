<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.omni_vision.MainActivity">

    <SurfaceView
        android:id="@+id/surfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <RelativeLayout
        android:id="@+id/leftMainButtonFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark"
        android:orientation="horizontal"
        android:alpha="0.5">

        <Button
            android:id="@+id/leftMainButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp"
            android:alpha="0.5"
            android:text="Web"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/wikiPediaButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/leftMainButton"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp"
            android:text="Wiki"
            android:alpha="0.5"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/gmailButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/wikiPediaButton"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp"
            android:text="GMAIL"
            android:alpha="0.5"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/customButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/gmailButton"
            android:background="@android:color/holo_blue_dark"
            android:padding="5dp"
            android:text="Custom"
            android:alpha="0.5"
            android:textColor="@android:color/white"/>

        <EditText
            android:id="@+id/customWebViewEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="http://www.                        "
            android:padding="3dp"
            android:layout_below="@+id/customButton"
            android:background="@android:color/holo_orange_dark"
            android:alpha="0.5"
            android:layout_margin="5dp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="100dp"/>

        <Button
            android:id="@+id/urlSubmittButton"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:background="@android:color/holo_orange_dark"
            android:alpha="0.5"
            android:text="Submitt"
            android:textColor="@android:color/white"
            android:layout_alignBottom="@+id/customWebViewEditText"
            android:layout_alignRight="@+id/customButton"
            android:layout_alignEnd="@+id/customButton" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="5dp"
        android:background="@android:color/holo_red_dark"
        android:layout_marginRight="20dp"
        android:alpha="0.5"
        android:layout_below="@+id/rightMainButtonFrame"
        android:layout_alignLeft="@+id/rightMainButtonFrame"
        android:layout_alignStart="@+id/rightMainButtonFrame">

        <EditText
            android:id="@+id/slackEditText"
            android:layout_width="202dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:hint="Write a Message"
            android:padding="3dp"
            android:background="@android:color/holo_orange_dark"
            android:alpha="0.5"
            android:textColor="@android:color/white"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" />

        <Button
            android:id="@+id/slackSubmittButton"
            android:layout_width="85dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@android:color/holo_orange_dark"
            android:alpha="0.5"
            android:text="Post it"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rightMainButtonFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/holo_red_dark"
        android:orientation="horizontal"
        android:alpha="0.5"
        android:textColor="@android:color/white">


        <Button
            android:id="@+id/mapsButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Maps"
            android:alpha="0.5"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/slackButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Slack"
            android:alpha="0.5"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/youTubeButton"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@android:color/holo_blue_dark"
            android:text="YouTube"
            android:alpha="0.5"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/rightMainButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Media"
            android:alpha="0.5"
            android:textColor="@android:color/white" />



    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="10dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/leftMainButtonFrame">

        <FrameLayout
            android:id="@+id/leftFrameLayout"
            android:layout_width="350dp"
            android:layout_height="450dp"


            android:layout_marginLeft="20dp"
            android:background="@android:color/holo_red_dark"
            android:alpha="0.5">
        </FrameLayout>

        <FrameLayout
            android:id="@+id/rightFrameLayout"
            android:layout_width="350dp"
            android:layout_height="450dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@android:color/holo_red_dark"
            android:alpha="0.5">
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>
